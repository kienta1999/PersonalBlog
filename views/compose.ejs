<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" value="" placeholder="Enter title" class="form-control input-lg">
        <label>Post</label>
        <textarea type="text" name="postBody" placeholder="Enter content" class="form-control input-lg" cols="40" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>